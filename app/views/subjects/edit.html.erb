<p>
  <%= link_to("<< Back to List", subjects_path, :class => "back-link")%>
</p>

<div class="subjects new">
  <<h2>Update Subject</h2>
  <%= form_for(@subject) do |form| %>
    <table summary="Subject form fields">
      <tr>
        <th>Name</th>
        <td><%= form.text_field(:name) %></td>
      </tr>

      <tr>
        <th>Position</th>
        <td><%= form.text_field(:position) %></td>
      </tr>

      <tr>
        <th>Visible</th>
        <td><%= form.text_field(:visiblle) %></td>
      </tr>

      <div class="form-buttons">
        <%= form.submit("Update Subject") %>
      </div>
    </table>
  <% end %>
</div>
