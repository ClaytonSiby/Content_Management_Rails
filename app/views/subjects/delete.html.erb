<p>
  <%= link_to("<< Back to List", subjects_path, :class => "back-link")%>
</p>

<div class="subjects new">
  <h2>Delete Subject</h2>
  <%= form_for(@subject,:method => "delete") do |form| %>
    <p>Are you sure you want to permanently delete this subject?</p>

    <p><%= @subject.name %></p>
    <div class="form-buttons">
      <%= form.submit("Delete Subject") %>
    </div>
  <% end %>
</div>
