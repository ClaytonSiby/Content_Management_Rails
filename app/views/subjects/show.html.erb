<div class="subjects show">
  <table summary="Subject detail view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>

    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>

    <tr>
      <th>Visible</th>
      <td><%= @subject.visiblle ? 'true' : 'false' %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td><%= @subject.created_at %></td>
    </tr>

    <tr>
      <th>Updated</th>
      <td><%= @subject.updated_at %></td>
    </tr>
  </table>
</div>
